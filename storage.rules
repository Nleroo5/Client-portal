rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             firestore.get(/databases/(default)/documents/salesReps/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is a sales rep
    function isRep() {
      return request.auth != null &&
             firestore.exists(/databases/(default)/documents/salesReps/$(request.auth.uid));
    }

    // Deal attachments - Reps can upload to their own folder, admins can access all
    match /deal-attachments/{repId}/{fileName} {
      // Admins can read/write all attachments
      allow read, write: if isAdmin();

      // Reps can upload to their own folder
      allow write: if isRep() && request.auth.uid == repId;

      // Reps can read their own attachments
      allow read: if isRep() && request.auth.uid == repId;
    }

    // Website Quote uploads - Allow unauthenticated uploads (clients filling discovery form)
    match /websiteQuotes/{quoteId}/{allPaths=**} {
      // Admins can read/write all quote files
      allow read, write: if isAdmin();

      // Allow anyone to upload (clients are unauthenticated)
      allow write: if true;

      // Allow anyone to read (for preview purposes)
      allow read: if true;
    }

    // CMS Website Content - Images uploaded by CMS clients
    match /websiteContent/{clientId}/{allPaths=**} {
      // Admins can read/write all
      allow read, write: if isAdmin();

      // CMS users can upload to their own folder
      allow write: if request.auth != null &&
                      firestore.exists(/databases/(default)/documents/cmsClients/$(clientId)) &&
                      firestore.get(/databases/(default)/documents/cmsClients/$(clientId)).data.email == request.auth.token.email;

      // Public read for website display
      allow read: if true;
    }

    // Client Portal uploads - Brand assets, logos, etc.
    match /clients/{clientId}/{allPaths=**} {
      // Admins can read/write all client files
      allow read, write: if isAdmin();

      // Allow unauthenticated uploads for client portals (clients access via URL parameter)
      allow write: if true;

      // Allow public read for displaying logos and assets in admin dashboard
      allow read: if true;
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
